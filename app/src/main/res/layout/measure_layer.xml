<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/layeryuanjiao"
    android:orientation="vertical"
     >
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@drawable/layeryuanjiao"
        >
        <TextView 
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:background="#E9E9E9"
            android:text="选择要测量的类型"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            />
      
        <Button 
            android:id="@+id/measure_juli"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:background="@drawable/drawtextstyle"
            android:text="测量距离"
            android:textSize="15sp"
            android:drawableRight="@mipmap/selectimg"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            />
        <Button
            android:id="@+id/measure_mianji"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:background="@drawable/drawtextstyle"
            android:text="测量面积"
            android:textSize="15sp"
            android:drawableRight="@mipmap/selectimg"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            />
        
         <Button 
            android:id="@+id/measure_juli_huadong"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:background="@drawable/drawtextstyle"
            android:text="测量距离(滑动)"
            android:textSize="15sp"
            android:drawableRight="@mipmap/selectimg"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            />
         
            <Button
            android:id="@+id/measure_mianji_haudong"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:background="@drawable/drawtextstyle"
            android:text="测量面积(滑动)"
            android:textSize="15sp"
            android:drawableRight="@mipmap/selectimg"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            />
        
    </LinearLayout>


</LinearLayout>
