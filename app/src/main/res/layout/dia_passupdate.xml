<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textviewstyle"
        android:gravity="center"
        android:height="40dp"
        android:text="密码修改"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/editstyle"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="280dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:text="旧密码"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/up_pass_old"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/editstyle"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="请输入旧密码"
            android:password="true" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="280dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:hint="请输入图形名称"
            android:text="新密码"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/up_pass_new"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/editstyle"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="请输入新密码"
            android:password="true" />

        <TextView
            android:layout_width="280dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:hint="请输入图形名称"
            android:text="确认密码"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/up_pass_new2"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/editstyle"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="请再次输入"
            android:password="true" />

        <Button
            android:id="@+id/btn_xiugai"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/drawtextstyle"
            android:text="确认修改"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>