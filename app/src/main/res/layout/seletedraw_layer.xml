<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="310dp"
    android:background="@drawable/layeryuanjiao"
    android:orientation="vertical"
     >
    
    <LinearLayout 
        android:layout_width="280dp"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@drawable/layeryuanjiao"
        >
        <TextView 
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:background="#E9E9E9"
            android:text="选择要添加的图形类型"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            />
        <Button           
            android:id="@+id/select_draw_dian"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:background="@drawable/drawtextstyle"
            android:text="点"
            android:textSize="15sp"
            android:drawableRight="@mipmap/selectimg"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            />
        <Button 
            android:id="@+id/select_draw_xian"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:background="@drawable/drawtextstyle"
            android:text="线"
            android:textSize="15sp"
            android:drawableRight="@mipmap/selectimg"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            />
        <Button
            android:id="@+id/select_draw_mian"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:background="@drawable/drawtextstyle"
            android:text="面"
            android:textSize="15sp"
            android:drawableRight="@mipmap/selectimg"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            />
        
    </LinearLayout>

      <LinearLayout 
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/showalltextstyle"
        >

          <CheckBox
              android:id="@+id/select_draw_showall"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="显示我的组共享的图形" 
              android:textStyle="bold"
              />
          
      </LinearLayout>

</LinearLayout>
