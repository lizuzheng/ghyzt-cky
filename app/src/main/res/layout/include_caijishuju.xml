<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 统计时间 -->

    <LinearLayout
        android:id="@+id/ll_include_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:text="开始时间:"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edit_startTime"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/editstyle"
            android:ems="10"
            android:focusable="false"
            android:gravity="center_vertical"
            android:text="2016-02-01 00:00" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:text="结束时间:"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edit_endTime"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/editstyle"
            android:ems="10"
            android:focusable="false"
            android:gravity="center_vertical"
            android:text="2016-02-01 00:00" />
    </LinearLayout>

    <!-- 采集人 -->

    <LinearLayout
        android:id="@+id/ll_include_qitatiaojian"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_qitatiaojian"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:text="采集人:"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edit_caijitiaojian_neirong"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/editstyle"
            android:ems="10"
            android:gravity="center_vertical"
             />
    </LinearLayout>
    
     <!-- 区域 -->

    <LinearLayout
        android:id="@+id/ll_include_quyu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical" >

        <TextView
 
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:text="区域:"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edit_caijitiaojian_quyu"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/editstyle"
            android:ems="10"
            android:focusable="false"
            android:gravity="center_vertical"
            android:text="金牛区"
             />
    </LinearLayout>

    <TextView
       android:id="@+id/tv_tongjifangshiwenzi"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:text="统计方式:"
        android:textSize="16sp" />

    <Button
         android:id="@+id/tv_tongjifangshi"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="#D9D9D9"
        android:text="按照区市县统计" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <Button
        android:id="@+id/btn_tongji"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#D9D9D9"
        android:text="统计" />

    <ListView
        android:id="@+id/lv_tongjijieguo"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="5dp" >
    </ListView>

</LinearLayout>